%header.navbar.navbar-fixed-top.navbar-inverse
  %div.container
    = link_to "yotto chat app", root_path, id: "logo"
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Home", root_path
        - if logged_in?
          %li= link_to "Customers", customers_path
          %li.dropdown
            %a.dropdown-toggle{:href=>"#", :'data-toggle'=>"dropdown"}
              Skill Sets 
              %b.caret
              %ul.dropdown-menu
                %li= link_to "All Skill Sets", skill_sets_path
                %li.divider
                %li
                  = link_to "Add Skill Sets", new_skill_set_path
            %li
          %li= link_to "Chat Ques", chat_ques_path
          %li.dropdown
            %a.dropdown-toggle{:href=>"#", :'data-toggle'=>"dropdown"}
              Account 
              %b.caret
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li.divider
                %li
                  = link_to "Log out", logout_path, method: "delete"
            %li
        - else 
          %li= link_to "Log in", login_path