.row
  = form_for(@skill_set) do |f|
    = render 'shared/error_messages', object: @skill_set
    .col-xs-6
      = f.text_field        :name,      placeholder: "Skill Set Name",    class: 'form-control',    required: true
      = f.collection_select :parent_id, @skill_sets , :id,:name , {prompt: "Select a Skill Set"}, {class: "form-control"}
      = f.fields_for        :chat_que  do |c_q|
        = c_q.text_field    :name,      placeholder: "Chat Que Name",     class: 'form-control'
    .col-xs-6
      %h3.text-center All User
      .well{:style => "max-height: 300px;overflow: auto;"}
        %ul.list-group
          = f.collection_check_boxes(:user_ids,@users, :id, :name, include_hidden: false) do |b|
            %li.list-group-item
              .checkbox
                = b.label do
                  = b.check_box(class: "check_box")
                  = b.object.name
          / = @users.each do |user|
          /   %li.list-group-item
          /     .checkbox
          /       = check_box_tag "skill_set[user_ids][]", user.id, @skill_set.users.include?(user)
          /       = user.name
          
    = f.submit "Save"
