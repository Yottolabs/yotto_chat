-provide(:title, 'Skill Set')
%h1 Create Skill Set
%div.row
  .col-xs-6
    = form_for(@skill_set) do |f|
      = render 'shared/error_messages', object: f.object

      = f.label :name
      = f.text_field :name, class: 'form-control'
      = f.label :Skillsets
      = f.collection_select :parent_id, SkillSet.all , :id,:name , {prompt: "Select a Skill Set"}, {class: "form-control"}

      = f.label :Chat_Que_Name
      = text_field_tag 'chat_que_name',nil, {class: 'form-control'}
     
      = f.submit "Create New Skill Set",class: "btn btn-primary" 
  .col-xs-6
  %h3.text-center All User
  .well{:style => "max-height: 300px;overflow: auto;"}
    %ul.list-group.checked-list-box
      - @users.each do |user|
        %li.list-group-item 
          = user.name
      
 