%h1 Customer Form
%div.row
  %div.col-md-6.col-md-offset-3
    = form_for(@customer) do |f|
      = render 'shared/error_messages', object: f.object

      = f.label :name
      = f.text_field :name, class: 'form-control'

      = f.label :email
      = f.text_field :email, class: 'form-control'

      = f.label :mobile_no
      = f.text_field :mobile_no, class: 'form-control'

      =# select_tag 'skill_set_id', content_tag(:option,'Select One Skill Set Please ',:value=>"")+options_from_collection_for_select(SkillSet.all, 'id', 'name'), :required => true, class: 'form-control'
      .skill_set_dropdown.form-control
        %nav.skill_set_dropdown_navbar
          Select A Skill Set Please
        %ul
          = render partial: 'skill_sets/skill_set_dropdown', collection: @skill_sets, as: :skill_set
     

      = f.submit "Enter to Chat", class: "btn btn-primary"